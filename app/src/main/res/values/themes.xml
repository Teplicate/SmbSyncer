<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DataSyncerSMB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_00</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/purple_05</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnSurface">@color/teal_05</item>
        <item name="colorButtonSecondaryVariant">@color/tsuki_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="InputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorAccent">@color/purple_200</item>
        <item name="colorOnSurface">@color/teal_50</item>
        <item name="backgroundTint">@color/teal_200</item>
        <item name="colorError">@color/red</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubHeaderTextStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/darkBG</item>
    </style>

    <style name="SubHeaderTextStyle1">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/teal_05</item>
    </style>

    <style name="ButtonStyleMain" parent="TextStyle">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyleSecondary" parent="TextStyle">
        <item name="android:background">@drawable/button_accent_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyleSecondaryVariant" parent="TextStyle">
        <item name="android:background">@drawable/button_accent_variant</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>