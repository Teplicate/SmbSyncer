<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DataSyncerSMB" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBG</item> <!--action bar -->
        <item name="colorPrimaryVariant">@color/purple_200</item>
        <item name="colorOnPrimary">@color/darkBG</item>
        <item name="android:colorBackground">@color/darkBG</item>
        <item name="colorAccent">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/purple_05</item>
        <item name="colorOnSecondary">@color/darkBG</item>
        <item name="colorOnSurface">@color/purple_05</item>
        <item name="backgroundColor">@color/darkBG</item>
        <item name="colorButtonSecondaryVariant">@color/tsuki_200</item>
        <item name="colorButtonSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="InputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorAccent">@color/purple_200</item>
        <item name="colorOnSurface">@color/purple_05</item>
        <item name="backgroundTint">@color/purple_200</item>
        <item name="colorError">@color/red</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubHeaderTextStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubHeaderTextStyle1">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/purple_05</item>
    </style>

    <style name="TextStyle">
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>